<%= link_to root_path do %><button class="btn btn-primary" type="button" style="background: #dddddd;color: #000000;margin-bottom: 50px;margin-right: 0px;margin-left: 0px;">Back</button><% end %>
    <div class="container" style="margin-left: -10px;">

        <div class="row">
            <div class="col-md-12" style="margin-bottom: 10px;margin-left: 0px;"><h1><%= @home.title %></h1></div>
        </div>
        <div class="row">
            <div class="col-md-12" style="margin-left: 0px;">
            <p><%= @home.body %></p>
            <ul>
              <li><%= link_to "Edit your story", edit_home_path(@home) %></li>
              <li><%= link_to "Delete your story", home_path(@home), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %></li>
            </ul>
          </div>
        </div>
    </div>

<h2>Comment Section</h2>
<% @home.comments.each do |comment| %>
<p>
  <strong> User Comments:</strong>
  <%= comment.body %>
</p>
<% end %>

<h2> Add your comment: </h2>
<%= form_with model: [ @home, @home.comments.build ] do
|form| %>
<p>
  <%= form.label :commenter %><br>
  <%= form.text_field :commenter %>
</p>
<p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</p>
<p>
  <%= form.submit %>
</p>
<% end %>

